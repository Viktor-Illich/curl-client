{
    "name": "code-tool/curl-client",
    "description": "cURL client",
    "license": "MIT",
    "keywords": ["http", "curl"],
    "prefer-stable": true,
    "require": {
        "php": "^7.1",
        "ext-curl": "*",
        "php-http/httplug": "^1",
        "php-http/message": "^1",
        "slim/slim": "@stable"
    },
    "autoload": {
        "psr-4": {
            "Http\\Client\\Curl\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Http\\Client\\Curl\\Tests\\": "tests/"
        }
    },
    "provide": {
        "php-http/client-implementation": "1.0",
        "php-http/curl": "1.7"
    }
}
